<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="isEnable"
        android:title="sound"
        android:summaryOn="On"
        android:summaryOff="Off"/>

    <ListPreference
        android:title="timer melody"
        android:key="songs"
        android:entries="@array/sound_labels"
        android:entryValues="@array/sound_values"/>

    <EditTextPreference
        android:title="timer duration"
        android:key="timer_duration"
        android:defaultValue="30"/>

</PreferenceScreen>